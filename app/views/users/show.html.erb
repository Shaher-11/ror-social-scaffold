<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <%= invitation_button(@user) %>

  <% if @user.friends.include?(current_user) %>
  <h1>Friend</h1>
  <% end %>

  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
